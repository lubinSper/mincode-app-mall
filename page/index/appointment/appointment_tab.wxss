page {
    background-color: #f4f4f4;
}

.special_selling {
    background-color: #fff;
    padding-bottom: 30rpx;
}

.warp {
    width: 100%;
    height: 240rpx;
    margin-top: 30rpx;
}

.special_selling .special_selling_item_b {
    height: 240rpx;
    display: flex;
    align-items: center;
    flex-direction: row;
}

.special_selling .special_selling_item_b .special_selling_item_b_l {
    padding-left: 30rpx;
}

.special_selling .special_selling_item_b .special_selling_item_b_l image {
    width: 240rpx;
    height: 240rpx;
    vertical-align: bottom;
}

.special_selling .special_selling_item_b .special_selling_item_b_r {
    flex: 1;
    height: 240rpx;
    box-sizing: border-box;
    padding-right: 30rpx;
    position: relative;
    margin-left: 20rpx;
}

.special_selling .special_selling_item_b .special_selling_item_b_r .special_selling_item_b_t {
    margin-top: 15rpx;
    font-size: 30rpx;
    line-height: 38rpx;
    max-height: 76rpx;
    color: #222;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-break: break-all;
    margin-right: 10px;
}

.special_mid {
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -25rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #555;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    margin-right: 30px;
}

.sell_price {
    color: #ff7800;
    font-size: 34rpx;
    font-weight: 500;
}

.special_mid .icon-vip {
    display: inline-block;
    width: 50rpx;
    height: 24rpx;
    background-size: cover;
    margin-left: 10rpx;
}

.sell_sign {
    font-size: 20rpx;
}

.sell_original_price {
    color: rgb(170,170,170);
    font-size: 22rpx;
    margin-left: 10rpx;
    text-decoration: line-through;
}

.special_selling_original_price {
    color: #aaaaaa;
    font-size: 22rpx;
    text-decoration: line-through;
    margin-left: 18rpx;
}

.member_icon {
    font-size: 18rpx;
    margin-left: 10rpx;
    display: inline-block;
    width: 56rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #deb567;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    position: relative;
    top: -4rpx;
}

.order_result_desc {
    margin-left: 20rpx;
    display: none;
}

.order_result_count {
    color: #ff7800;
}

.special_selling_item_b_b {
    font-size: 22rpx;
    color: #888;
    position: absolute;
    left: 0;
    bottom: 0;
    height: 60rpx;
    line-height: 60rpx;
}

.special_selling_item_b_b text {
    display: inline-block;
}

.operation_item {
    margin-right: 20rpx;
}

.sell_order_btn {
    position: absolute;
    right: 30rpx;
    bottom: 0;
    width: 169rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #ff7800;
    border-radius: 30rpx;
    text-align: center;
}

.loading_failure {
    width: 100%;
    margin: 0 auto;
    display: block;
    background-color: none;
    height: 345rpx;
    padding-top: 200rpx;
}

.loading_failure .loading_failure_img {
    width: 100%;
    text-align: center;
    padding-top: 60rpx;
}

.loading_failure .loading_failure_img image {
    width: 100rpx;
    height: 118rpx;
    display: block;
    margin: 0 auto;
    background: none;
}

.loading_failure .loading_failure_text {
    width: 100%;
    text-align: center;
    color: #bababa;
    font-size: 25rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.loading_failure .loading_failure_text text {
    color: #888;
    font-weight: bold;
}