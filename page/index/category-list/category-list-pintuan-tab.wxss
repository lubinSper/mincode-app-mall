}

.special_selling {
    background-color: #fff;
}

.cutprice_header {
    width: 100%;
    height: 250rpx;
}

.cutprice_header image {
    width: 100%;
    height: 100%;
}

.special_selling .special_selling_item_a {
    padding: 0rpx 30rpx;
