    color: rgb(136,136,136);
}

.special_selling_item_b_b text {
    display: inline-block;
}

.sell_order {
    border: 1rpx solid #eb1b1b;
    color: #eb1b1b;
    font-size: 22rpx;
    border-radius: 4rpx;
    margin-right: 15rpx;
    width: 60rpx;
    height: 30rpx;
    text-align: center;
    line-height: 30rpx;
}

.scy_sell_order {
    border: 2rpx solid rgb(250,120,0);
    color: rgb(250,120,0);
}

.operation_item {
    margin-right: 20rpx;
    padding-top: 1rpx;
}

.order_result_desc {
    float: right;
    margin-right: 10rpx;
}

.order_result_count {
    color: rgb(250,120,0);
}

