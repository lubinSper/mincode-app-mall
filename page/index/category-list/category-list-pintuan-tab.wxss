    color: #888;
    font-size: 26rpx;
    display: table;
    width: 100%;
}

.special_selling .special_selling_item_a .special_selling_item_a_3 .special_selling_item_a_l {
    float: left;
    line-height: 26rpx;
}

.special_selling .special_selling_item_a .special_selling_item_a_3 .special_selling_item_a_r {
    float: right;
    line-height: 34rpx;
    font-size: 34rpx;
}

.special_selling .special_selling_item_a .special_selling_item_a_3 .special_selling_item_a_l .special_selling_comment {
    margin-right: 22rpx;
}

.special_selling .special_selling_item_a .special_selling_item_a_3 .special_selling_item_a_l .special_selling_praise {
    margin-right: 20rpx;
}

.special_selling_item_b_2 {
    margin-top: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.sell_price {
    color: rgb(250,120,0);
    font-size: 32rpx;
    font-weight: 500;
}

.sell_original_price {
    color: rgb(170,170,170);
    font-size: 22rpx;
    margin-left: 10rpx;
    text-decoration: line-through;
}

.sell_order_btn {
    font-size: 24rpx;
    color: white;
    background-color: rgb(250,120,0);
    line-height: 50rpx;
    float: right;
