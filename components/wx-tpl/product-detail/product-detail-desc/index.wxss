.product-detail-desc {
    padding: 10rpx 30rpx 30rpx;
}

.goods_images {
    width: 100%;
}

.goods_des_parent {
    margin: 60rpx 0 0 30rpx;
}

.goods_des_parent image {
    width: 690rpx;
}

.goods_right_a image,.goods_right_a video {
    width: 100%;
    height: 410rpx!important;
}

.goods_des_parent .goods_right_b {
    width: 100%;
    font-size: 32rpx;
    color: #222;
    word-break: break-all;
}

.replace-video {
    position: relative;
    height: 410rpx;
}

.mask-img {
    background: rgba(0,0,0,0.5);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 410rpx;
}

.play-icon {
    position: absolute;
    z-index: 2;
    top: 50%;
    left: 50%;
    width: 93rpx;
    height: 93rpx;
    margin-left: -60rpx;
    margin-top: -46rpx;
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/player.png) no-repeat center center;
    background-size: 100% 100%;
}

.no_price_hide {
    display: none!important;
}