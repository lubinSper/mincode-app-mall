.custom_waterfall {
}

.free-WaterfallFlow {
    margin: 0;
    justify-content: space-around;
}

.free-WaterfallFlow .flex-item {
    width: 360rpx;
    margin-left: 10rpx;
    float: left;
}

.free-WaterfallFlow .flex-wrap {
    display: inline-block;
    width: 100%;
    margin-bottom: 20rpx;
}

.flex-wrap image {
    width: 100%;
    margin: 0 auto;
    height: 360rpx;
}

.image-odd:nth-child(2n+1) .coverImage {
    height: 480rpx!important;
}

.image-even:nth-child(2n) .coverImage {
    height: 480rpx!important;
}

.free-WaterfallFlow .flex-wrap .goodsInfo {
    height: 120rpx;
}

.free-WaterfallFlow .flex-wrap .name {
    font-size: 26rpx;
    line-height: 26rpx;
    color: #222;
    padding: 26rpx 0 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.free-WaterfallFlow .flex-wrap .price {
    font-size: 30rpx;
    color: #ff7800;
}

.free-WaterfallFlow .flex-wrap .old_price {
    text-align: center;
    font-size: 20rpx;
    color: #aaaaaa;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.free-WaterfallFlow .flex-wrap .price text {
    font-size: 24rpx;
}

.warp-image {
    position: relative;
}

.limit_view {
    width: 100%;
    height: 60rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.teshu {
    background: linear-gradient(90deg,#ff3988 0%,#b423d4 100%);
    height: 52rpx;
}

.limit_view image {
    width: 100%;
    height: 100%;
    background: transparent;
}

.limit_view .limit {
    width: 100%;
    padding-left: 30rpx;
    font-size: 22rpx;
    position: absolute;
    bottom: 19rpx;
    line-height: 24rpx;
    color: white;
}

.teshu .limit {
    bottom: 15rpx;
}

.limit_view .limit.more {
    padding-left: 24rpx;
}

.limit_view.cut_price .limit {
    padding-left: 96rpx;
    bottom: 14rpx;
}

.limit_view .limit image {
    background-color: transparent;
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
}

.limit_view .limit .time {
    display: inline-block;
    margin-left: 4rpx;
    vertical-align: middle;
}

.tag_icon {
    position: absolute;
    top: 5rpx;
    left: 5rpx;
}

.tag_icon image {
    background: transparent;
}

.tag_icon image.new {
    width: 64rpx;
    height: 72rpx;
}

.tag_icon image.hot {
    width: 80rpx;
    height: 84rpx;
}

.tag_icon image.promotion {
    width: 66rpx;
    height: 80rpx;
}

.tag_icon image.clearanceSale {
    width: 68rpx;
    height: 80rpx;
}

.tag_icon image.yuyue {
    width: 60rpx;
    height: 70rpx;
}

.tag_icon image.preSale {
    width: 70rpx;
    height: 66rpx;
}

.tag_icon image.dztj {
    width: 74rpx;
    height: 60rpx;
}

.icon-vip {
    display: inline-block;
    width: 50rpx!important;
    height: 24rpx!important;
    background-size: cover;
    margin: 0 0 0 10rpx!important;
}