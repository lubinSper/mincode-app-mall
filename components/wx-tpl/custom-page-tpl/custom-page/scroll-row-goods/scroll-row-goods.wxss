.goods_shopping {
    background-color: white;
}

.goods_shopping .scroll_view {
    padding-left: 20rpx;
}

.goods_shopping .scroll_view .scroll {
    white-space: nowrap;
}

.goods {
    display: inline-block;
    width: 210rpx;
    margin: 0 10rpx;
}

.goods.last {
    margin-right: 30rpx;
}

.goods .img_view {
    position: relative;
    width: 100%;
    height: 210rpx;
}

.goods .img_view image {
    width: 100%;
    height: 100%;
    background-color: #eeeeee;
}

.goods .img_view .limit {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #ff7800;
    opacity: 0.85;
    color: white;
    font-size: 22rpx;
}

.goods .img_view .limit .content {
    align-items: center;
    margin: auto;
    display: flex;
    padding-left: 45rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.goods .img_view .limit .content.more {
    padding-left: 38rpx;
}

.goods .img_view .limit .content image {
    width: 26rpx;
    height: 26rpx;
    background-color: transparent;
}

.goods .img_view .limit .content .time {
    margin-left: 8rpx;
}

.goods .price {
    text-align: center;
    color: #ff7800;
    font-size: 26rpx;
    margin-top: 10rpx;
    height: 36rpx;
    line-height: 36rpx;
}

.goods .old_price {
    text-align: center;
    font-size: 20rpx;
    color: #aaaaaa;
    text-decoration: line-through;
}

.member_icon {
    font-size: 18rpx;
    margin-left: 10rpx;
    display: inline-block;
    width: 56rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #deb567;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    position: relative;
    top: -4rpx;
}

.userInfo {
    padding: 0 12rpx 0 7rpx;
}

.userInfo .name {
    font-size: 26rpx;
    color: #222;
    margin-top: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.userInfo .price {
    text-align: left;
}

.userInfo .old_price {
    margin-left: 10rpx;
}

.tag_icon {
    position: absolute;
    top: 5rpx;
    left: 5rpx;
}

.tag_icon image {
    background: transparent!important;
}

.tag_icon image.new {
    width: 64rpx;
    height: 72rpx;
}

.tag_icon image.hot {
    width: 68rpx;
    height: 72rpx;
}

.tag_icon image.promotion {
    width: 66rpx;
    height: 80rpx;
}

.tag_icon image.clearanceSale {
    width: 68rpx;
    height: 80rpx;
}

.tag_icon image.yuyue {
    width: 60rpx;
    height: 70rpx;
}

.tag_icon image.preSale {
    width: 60rpx;
    height: 54rpx;
}

.tag_icon image.dztj {
    width: 74rpx;
    height: 60rpx;
}

.goods .img_view .activity_bg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40rpx;
    font-size: 22rpx;
    line-height: 40rpx;
    background: #ff7800;
    overflow: hidden;
    text-align: center;
    opacity: 0.8;
    color: white;
}

.icon-vip {
    display: inline-block;
    width: 50rpx;
    height: 24rpx;
    background-size: cover;
    margin-left: 10rpx;
}