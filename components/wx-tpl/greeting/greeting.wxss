.greeting {
    display: flex;
    padding: 20rpx 0 30rpx 0;
    box-sizing: border-box;
    height: 150rpx;
    background-color: white;
    margin-top: 20rpx;
}

.greeting.detail {
    position: fixed;
    right: 30rpx;
    bottom: 180rpx;
    background: none;
    z-index: 999;
}

.greeting view {
    box-sizing: border-box;
}

.greeting .left {
    padding-left: 30rpx;
    padding-top: 10rpx;
    position: relative;
    width: 112rpx;
}

.greeting .left .head_img {
    margin-top: 4rpx;
    width: 80rpx;
    height: 80rpx;
    background-color: #eee;
}

.greeting .left .icon {
    height: 30rpx;
    width: 30rpx;
    position: absolute;
    right: -6rpx;
    bottom: 6rpx;
}

.greeting .left .icon image {
    height: 100%;
    width: 100%;
}

.greeting .content {
    flex: 1;
    height: 100%;
    padding: 0 30rpx;
}

.greeting .content.detail {
    flex: 1;
    height: 100%;
    padding: 0 15rpx;
}

.greeting .content .first {
    font-weight: 500;
    width: 100%;
    font-size: 30rpx;
    color: #240a10;
    height: 42rpx;
    line-height: 42rpx;
}

.greeting .content .second {
    margin-top: 8rpx;
    width: 100%;
    font-size: 24rpx;
    color: #888888;
    height: 56rpx;
    line-height: 28rpx;
    padding-right: 80rpx;
}

.greeting .right {
    width: 185rpx;
    display: flex;
}

.greeting .right image {
    margin-top: 22rpx;
    height: 70rpx;
    width: 70rpx;
}

.greeting .right .wechat_view {
    position: relative;
    width: 120rpx;
}

.greeting .right .wechat_view image {
    position: absolute;
    top: 0;
    left: 20rpx;
}

.greeting .right .wechat_view .contact {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 999;
    padding-left: 10rpx;
    width: 120rpx;
    height: 100rpx;
}

.greeting .right .wechat_view .contact button {
    width: 100%;
    height: 100%;
    opacity: 0;
}

.max_one_line {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    white-space: normal;
    word-break: break-all;
    overflow: hidden;
}

.max_two_line {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    white-space: normal;
    word-break: break-all;
    overflow: hidden;
}

.greeting .pageDetail {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
}

.pageDetail .text {
    background: #9ee448;
    border: 1rpx solid #77b849;
    width: 380rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 22rpx;
    border-radius: 10rpx;
    position: relative;
    margin-right: 0rpx;
    transition: opacity 0.5s;
    opacity: 0;
}

.pageDetail .text::after {
    content: '';
    position: absolute;
    right: -7rpx;
    top: 26rpx;
    border-right: 1rpx solid #77b849;
    display: inline-block;
    border-top: 1rpx solid #77b849;
    width: 10rpx;
    height: 10rpx;
    background: #9ee448;
    transform: rotate(45deg);
}

.pageDetail .hide {
    display: none;
    transition: all 0.5s;
}

.pageDetail .wechat_view {
    position: relative;
    width: 100rpx;
    height: 100rpx;
    box-shadow: 2rpx 2rpx 34rpx 0 #dad0d0;
    border-radius: 50rpx;
}

.pageDetail button {
    width: 100rpx;
    height: 100rpx;
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 999;
    margin: 0;
}

.pageDetail image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
}