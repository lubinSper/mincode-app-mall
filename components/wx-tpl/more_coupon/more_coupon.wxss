@import "../../template/show_dialog/show_dialog.wxss";

view {
    box-sizing: border-box;
}

.coupon_banner {
    width: 100%;
    height: 230rpx;
    margin-bottom: 30rpx;
}

.coupon_banner image {
    width: 100%;
    height: 230rpx;
}

.coupon-list {
    padding: 0 28rpx;
}

.coupon-list .more-coupon {
    padding-bottom: 30rpx;
    font-size: 32rpx;
    color: #888;
    text-align: center;
}

.coupon-enter {
    position: fixed;
    z-index: 999;
    right: 30rpx;
    bottom: 50rpx;
    width: 100rpx;
    height: 100rpx;
    background: url("http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/coupon-enter.png") no-repeat;
    background-size: cover;
}

.loading {
    text-align: center;
    position: relative;
    background-color: #f4f4f4;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
}

.loading image {
    width: 32rpx;
    height: 32rpx;
    animation: circle 1s infinite linear;
    position: absolute;
    top: 50%;
    margin-top: -16rpx;
}

.loading text {
    font-size: 26rpx;
    color: #222;
    padding-left: 42rpx;
}

@-webkit-keyframes circle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.copyright {
    width: 100%;
    left: 0;
    bottom: 0;
    margin: 40rpx 0 56rpx 0;
}

.copyright .copyright_img {
    width: 100%;
    display: inline-block;
    text-align: center;
}

.copyright .copyright_img image {
    width: 110rpx;
    height: 84rpx;
    display: block;
    margin: 0 auto;
}

.copyright .copyright_text {
    font-size: 24rpx;
    display: inline-block;
    width: 100%;
    text-align: center;
    color: #b3b5b7;
}

.no_ordering {
    width: 100%;
    margin: 0 auto;
    text-align: center;
}

.no_ordering .no_ordering_img {
    padding-top: 258rpx;
    width: 100%;
}

.no_ordering .no_ordering_img image {
    width: 100%;
    height: auto;
    margin: 0 auto;
    display: block;
}

.no_ordering .no_ordering_text {
    width: 100%;
    color: #555;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.loading_failure {
    width: 100%;
    margin: 0 auto;
    display: block;
    background-color: none;
    height: 345rpx;
}

.loading_failure .loading_failure_img {
    width: 100%;
    text-align: center;
    padding-top: 60rpx;
}

.loading_failure .loading_failure_img image {
    width: 100rpx;
    height: 118rpx;
    display: block;
    margin: 0 auto;
}

.loading_failure .loading_failure_text {
    width: 100%;
    text-align: center;
    color: #bababa;
    font-size: 25rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.loading_failure .loading_failure_text text {
    color: #888;
    font-weight: bold;
}