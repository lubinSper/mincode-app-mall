view {
    box-sizing: border-box;
}

.item {
    display: flex;
    padding: 16rpx 30rpx;
    background: white;
}

.item .left {
    height: 250rpx;
    width: 250rpx;
}

.item .left image {
    height: 100%;
    width: 100%;
    background: #eee;
}

.item .right {
    padding-left: 20rpx;
    flex: 1;
}

.item .right .title {
    font-size: 30rpx;
    color: #222222;
    height: 72rpx;
    line-height: 36rpx;
    margin-top: 4rpx;
}

.item .right .number {
    font-size: 24rpx;
    color: #888888;
    margin-top: 10rpx;
}

.item .right .number text {
    color: #ff7800;
}

.item .right .origin_price {
    font-size: 24rpx;
    color: #888888;
    margin-top: 40rpx;
    line-height: 30rpx;
    text-decoration: line-through;
}

.item .right .price_view {
    display: flex;
    align-items: center;
}

.item .right .price_view .l {
    flex: 1;
    display: flex;
    align-items: center;
}

.item .right .price_view .l .icon {
    font-size: 24rpx;
    color: #ff7800;
    padding-top: 8rpx;
}

.item .right .price_view .l .price {
    color: #ff7800;
    margin-left: 15rpx;
}

.item .right .price_view .l .price .symbol {
    font-size: 24rpx;
}

.item .right .price_view .l .price .int {
    font-size: 34rpx;
    font-weight: 500;
}

.item .right .price_view .l .price .flo {
    font-size: 22rpx;
}

.item .right .price_view .button {
    width: 168rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    color: white;
    text-align: left;
    font-size: 28rpx;
    background: #ff7800 url(http://xcximg.197.com/xcx/arrow_kj.png) no-repeat;
    background-position: 126rpx 22rpx;
    background-size: 10rpx 20rpx;
    padding-left: 34rpx;
}

.max_one_line {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    white-space: normal;
    word-break: break-all;
    overflow: hidden;
}

.max_two_line {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    white-space: normal;
    word-break: break-all;
    overflow: hidden;
}