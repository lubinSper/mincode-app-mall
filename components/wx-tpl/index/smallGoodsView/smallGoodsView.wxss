.goods {
    display: inline-block;
    width: 210rpx;
    margin: 0 10rpx;
}

.goods.last {
    margin-right: 30rpx;
}

.goods .img_view {
    position: relative;
    width: 100%;
    height: 210rpx;
}

.goods .img_view image {
    width: 100%;
    height: 100%;
    background-color: #eeeeee;
}

.goods .img_view .limit {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #ff3892;
    opacity: 0.85;
    color: white;
    font-size: 22rpx;
}

.goods .img_view .limit .content {
    align-items: center;
    margin: auto;
    display: flex;
    padding-left: 45rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.goods .img_view .limit .content.more {
    padding-left: 38rpx;
}

.goods .img_view .limit .content image {
    width: 26rpx;
    height: 26rpx;
    background-color: transparent;
}

.goods .img_view .limit .content .time {
    margin-left: 8rpx;
}

.goods .price {
    text-align: center;
    color: #ff7800;
    font-size: 26rpx;
    margin-top: 10rpx;
    height: 36rpx;
    line-height: 36rpx;
}

.goods .price .icon-vip {
    display: inline-block;
    width: 50rpx;
    height: 24rpx;
    background-size: cover;
    margin-left: 10rpx;
}

.goods .old_price {
    text-align: center;
    font-size: 20rpx;
    color: #aaaaaa;
    text-decoration: line-through;
}

.member_icon {
    font-size: 18rpx;
    margin-left: 10rpx;
    display: inline-block;
    width: 56rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #deb567;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    position: relative;
    top: -4rpx;
}

.hide {
    display: none!important;
}

.userLimit {
    width: 360rpx;
    margin: 0 0 0 10rpx;
}

.userLimit .img_view {
    position: relative;
    width: 100%;
    height: 360rpx;
}

.userLimit .img_view .limit .content {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0;
    justify-content: center;
}

.userLimit .img_view .limit .content.more {
    padding: 0;
}

.userInfo {
    padding: 0 12rpx 30rpx 7rpx;
}

.userInfo .name {
    font-size: 26rpx;
    color: #222;
    margin-top: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.userInfo .price {
    text-align: left;
}

.userInfo .old_price {
    margin-left: 10rpx;
}