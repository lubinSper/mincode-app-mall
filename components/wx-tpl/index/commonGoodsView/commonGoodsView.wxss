.r_small {
    width: 360rpx;
    float: left;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
    box-sizing: border-box;
    background-color: white;
}

.r_small .price_ico {
    width: 70rpx;
    height: 39rpx;
    line-height: 39rpx;
    display: inline-block;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.r_small .sale_ico {
    background-color: #f95341;
}

.r_small .order_price {
    background-color: #60cb25;
}

.r_small .bg {
    position: relative;
    width: 100%;
    height: 360rpx;
}

.r_small .bg image {
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.r_small .bg image.bg_img {
    background-color: #eee;
}

.r_small .bg1 {
    position: relative;
    width: 100%;
    height: 270rpx;
}

.r_small .bg3 {
    position: relative;
    width: 100%;
    height: 480rpx;
}

.r_content {
    padding: 15rpx 10rpx;
    height: 172rpx;
    box-sizing: border-box;
    position: relative;
    padding-right: 20rpx;
}

.r_content .name {
    width: 100%;
    line-height: 40rpx;
    height: 40rpx;
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    white-space: normal;
    word-break: break-all;
    overflow: hidden;
    position: relative;
    color: #222;
}

.goods_recommend_view {
    display: inline;
    margin: 0;
    padding: 0;
    position: relative;
    padding-left: 30rpx;
    margin-right: 8rpx;
}

.goods_label_recommend {
    color: #fff;
    margin: 0;
    padding: 0;
    background-color: #ff7800;
    border-radius: 4rpx;
    text-align: center;
    font-size: 22rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 111;
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
}

.r_content .price {
    padding-top: 20rpx;
    display: inline-block;
    color: rgb(250,120,0);
    height: 30rpx;
    line-height: 30rpx;
    font-size: 32rpx;
}

.r_content .price abcd {
    font-size: 20rpx;
    color: #aaa;
    text-decoration: line-through;
    padding-left: 10rpx;
}

.r_small .r_content .price view {
    float: left;
}

.r_small .r_content .price i {
    font-size: 24rpx;
}

.r_small .r_content .price .integer_num {
    font-size: 32rpx;
    font-weight: 500;
}

.r_small .r_content .price .remainder {
    font-size: 22rpx;
    font-weight: 500;
}

.r_small .r_content .price abcd {
    float: left;
    color: #aaa;
    font-size: 22rpx;
    margin-top: 4rpx;
}

.r_small .r_content .price .icon-vip {
    display: inline-block;
    width: 50rpx;
    height: 24rpx;
    background-size: cover;
    margin-left: 10rpx;
}

.member_icon {
    font-size: 18rpx;
    margin-left: 10rpx;
    display: inline-block;
    width: 56rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #deb567;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    position: relative;
    top: -4rpx;
}

.limit_view {
    width: 100%;
    height: 60rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.teshu {
    background: linear-gradient(90deg,#ff3988 0%,#b423d4 100%);
    height: 52rpx;
}

.limit_view .limit {
    width: 100%;
    padding-left: 80rpx;
    font-size: 24rpx;
    position: absolute;
    bottom: 19rpx;
    line-height: 24rpx;
    color: white;
}

.teshu .limit {
    bottom: 15rpx;
}

.limit_view .limit.more {
    padding-left: 74rpx;
}

.limit_view.cut_price .limit {
    padding-left: 96rpx;
    bottom: 16rpx;
}

.limit_view .limit image {
    background-color: transparent;
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
}

.limit_view .limit .time {
    display: inline-block;
    margin-left: 4rpx;
    vertical-align: middle;
}

.tag_icon {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
}

.tag_icon image {
    background: transparent;
}

.tag_icon image.new {
    width: 81rpx;
    height: 90rpx;
}

.tag_icon image.hot {
    width: 80rpx;
    height: 85rpx;
}

.tag_icon image.promotion {
    width: 85rpx;
    height: 102rpx;
}

.tag_icon image.clearanceSale {
    width: 84rpx;
    height: 100rpx;
}

.tag_icon image.yuyue {
    width: 68rpx;
    height: 80rpx;
}

.tag_icon image.preSale {
    width: 71rpx;
    height: 66rpx;
}

.tag_icon image.dztj {
    width: 96rpx;
    height: 76rpx;
}

.r_content .buy_car {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/wds-xcx/add.png) center / 30rpx no-repeat;
    width: 110rpx;
    height: 110rpx;
    position: absolute;
    bottom: 18rpx;
    right: -16rpx;
    z-index: 2;
}

