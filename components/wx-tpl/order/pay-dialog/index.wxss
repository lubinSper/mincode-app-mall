.pay-dialog {
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}

.pay-dialog-modal {
    position: absolute;
    z-index: 666;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
}

.pay-dialog-body {
    position: relative;
    z-index: 999;
    width: 560rpx;
    height: 429rpx;
    background-color: white;
    border-radius: 8rpx;
    margin-top: 231rpx;
    padding: 69rpx 50rpx;
    box-sizing: border-box;
}

.close-dialog {
    position: absolute;
    left: 50%;
    margin-left: -30rpx;
    bottom: -160rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    text-align: center;
    line-height: 60rpx;
    color: white;
    border: 1rpx solid white;
}

.close-dialog image {
    width: 100%;
    height: 100%;
}

.body-title {
    text-align: center;
    font-size: 36rpx;
    line-height: 36rpx;
}

.body-input {
    border-radius: 44rpx;
    border: 1rpx solid #e2e2e2;
    height: 88rpx;
    line-height: 88rpx;
    padding-left: 40rpx;
    margin-top: 50rpx;
}

.body-input {
    position: relative;
    display: flex;
    align-items: center;
}

.body-input input {
    display: flex;
    align-items: center;
}

.body-input .unit {
    position: absolute;
    right: 50rpx;
    top: 0;
    color: #aaa;
}

.recharge-btn {
    width: 100%;
    height: 88rpx;
    border-radius: 44rpx;
    line-height: 88rpx;
    background-color: #d3a95a;
    margin-top: 30rpx;
    text-align: center;
    color: white;
    transition: all .2s;
}

.recharge-btn.disabled {
    background-color: rgba(211,169,90,0.6);
}

.placeholder-class {
    color: #aaa;
}