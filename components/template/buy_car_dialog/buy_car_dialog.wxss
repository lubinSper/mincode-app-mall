.check_goods_type_bg {
    position: fixed;
    width: 100%;
    height: 100%;
    opacity: 0;
    background-color: #000;
    top: 0;
    left: 0;
}

.check_goods_type_bg_1 {
    animation: bg_block 0.3s linear;
    opacity: 0.5;
}

@-webkit-keyframes bg_block {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 0.5;
    }
}

@keyframes bg_block {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 0.5;
    }
}

.check_goods_type_bg_2 {
    animation: bg_hidden 0.3s linear;
}

@-webkit-keyframes bg_hidden {
    0% {
        opacity: 0.5;
    }

    100% {
        opacity: 0;
    }
}

@keyframes bg_hidden {
    0% {
        opacity: 0.5;
    }

    100% {
        opacity: 0;
    }
}

.check_goods_type {
    background-color: #fff;
    position: fixed;
    width: 100%;
    bottom: 0;
    transform: translateY(100%);
    z-index: 999;
}

.check_goods_warp {
    padding: 0 30rpx;
}

.check_goods_type .goods_info,.check_goods_type .goods_type,.check_goods_type .goods_check_num {
}

.check_goods_type .goods_info {
    padding: 12rpx 0 20rpx 0;
    overflow: hidden;
    position: relative;
    border-bottom: 1rpx solid #e2e2e2;
}

.check_goods_type .goods_info .goods_info_l,.check_goods_type .goods_info .goods_info_c {
    float: left;
}

.check_goods_type .goods_info .goods_info_r {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/md_bycar_close.png) center / 24rpx no-repeat;
    width: 72rpx;
    height: 72rpx;
    top: -6rpx;
    right: -24rpx;
    position: absolute;
}

.check_goods_type .goods_info .goods_info_l {
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}

.check_goods_type .goods_info .goods_info_l image {
    width: 180rpx;
    height: 180rpx;
}

.check_goods_type .goods_info .goods_info_c .goods_price {
    font-size: 36rpx;
    color: #ff7800;
    line-height: 36rpx;
    margin-top: 32rpx;
    margin-bottom: 25rpx;
}

.check_goods_type .goods_info .goods_info_c .goods_orgin_price,.check_goods_type .goods_info .goods_info_c .goods_surplus {
    font-size: 28rpx;
    color: #888;
    line-height: 28rpx;
}

.check_goods_type .goods_info .goods_info_c .goods_orgin_price {
    text-decoration: line-through;
}

.check_goods_type .goods_info .goods_info_c .goods_surplus {
    margin-top: 25rpx;
}

.check_goods_type .goods_type .goods_warp {
    overflow: hidden;
    padding-top: 20rpx;
    margin-bottom: 0;
    border-top: 1rpx solid #e2e2e2;
    border-bottom: 1rpx solid #e2e2e2;
}

.check_goods_type .goods_type .goods_warp .goods_type_item {
    float: left;
    margin-right: 20rpx;
    border-radius: 4rpx;
    border: 2rpx solid #888;
    margin-bottom: 20rpx;
    padding: 15rpx 14rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    color: #888;
}

.check_goods_type .goods_type .goods_warp .goods_type_item_disable {
    color: #ddd;
    border: 2rpx solid #ddd;
    background-color: #f8f8f8;
}

.check_goods_type .goods_type .goods_warp .goods_type_item_active {
    border: 2rpx solid #ff7800;
    color: #ff7800;
    background-color: #fff;
}

.check_goods_type .goods_check_num {
    overflow: hidden;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.check_goods_type .goods_check_num .goods_check_num_l {
    float: left;
    font-size: 30rpx;
    color: #222;
}

.check_goods_type .goods_check_num .goods_check_num_r {
    float: right;
    position: relative;
    width: 180rpx;
    text-align: center;
    font-size: 30rpx;
    color: #222;
    border: 1rpx solid #ddd;
    border-radius: 4rpx;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_l,.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r {
    position: absolute;
    top: -26rpx;
    width: 100rpx;
    height: 100rpx;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_l {
    left: -50rpx;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_l view,.check_goods_type .goods_check_num .goods_check_num_r .goods_num_l_disable view,.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r view,.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r_disable view {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/wds-xcx/jian_normal.png) center / 20rpx 2rpx no-repeat;
    width: 48rpx;
    height: 48rpx;
    border-right: 1rpx solid #ddd;
    margin-left: 50rpx;
    margin-top: 26rpx;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_l_disable view {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/wds-xcx/jian_bukedian.png) center / 20rpx 2rpx no-repeat;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r {
    right: -50rpx;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r view,.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r_disable view {
    border-right: 0;
    border-left: 1rpx solid #ddd;
    margin-right: 50rpx;
    margin-left: 0;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r view {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/wds-xcx/add_normal.png) center / 20rpx no-repeat;
}

.check_goods_type .goods_check_num .goods_check_num_r .goods_num_r_disable view {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/wds-xcx/add_bukedian.png) center / 20rpx no-repeat;
}

.check_goods_type .goods_sure,.check_goods_type .goods_out {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    background-color: #ff7800;
    letter-spacing: 5rpx;
}

.check_goods_type .goods_out {
    background-color: #ffcea3;
}