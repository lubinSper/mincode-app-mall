.bg_layer {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
    z-index: 998;
}

.privilege_main {
    position: fixed;
    left: 125rpx;
    top: 200rpx;
    width: 500rpx;
    height: 664rpx;
    background-color: #fff;
    border-radius: 10rpx;
    z-index: 999;
}

.privilege_title {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/gongxing.png) no-repeat left top / 100% 171rpx;
    width: 100%;
    height: 171rpx;
    margin: 0;
    padding: 0;
}

.welcome_img {
    width: 420rpx;
    height: 42rpx;
    padding-top: 40rpx;
    margin: 0 auto;
}

.welcome_img image {
    width: 420rpx;
    height: 42rpx;
}

.welcome_str {
    margin-top: 18rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
}

.privilege_name {
    width: 400rpx;
    height: 24rpx;
    margin: 60rpx auto 50rpx auto;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.privilege_name .bg_line {
    width: 100%;
    height: 1rpx;
    border-top: 1rpx solid #e2e2e2;
}

.vip_privilege {
    position: absolute;
    left: 50%;
    top: 0;
    width: 120rpx;
    height: 24rpx;
    margin-top: -8rpx;
    margin-left: -65rpx;
    text-align: center;
    font-size: 24rpx;
    color: #555;
    background-color: #fff;
}

.privilege_list {
    display: flex;
    margin: 0 56rpx;
    color: #222;
}

.privilege_item {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 192rpx;
}

.item_icon {
    width: 80rpx;
    height: 80rpx;
    background-color: #f8f1e4;
    border-radius: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.icon_recharge image {
    width: 46rpx;
    height: 46rpx;
}

.icon_goods image {
    width: 40rpx;
    height: 39rpx;
}

.item_name {
    text-align: center;
    font-size: 24rpx;
    color: #222;
    margin-top: 10rpx;
}

.add_money {
    margin-top: 50rpx;
    width: 380rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 50rpx auto 30rpx auto;
    background-color: #d3a95a;
    color: #fff;
    font-size: 30rpx;
    border-radius: 70rpx;
    text-align: center;
}

.wait_view {
    text-align: center;
    font-size: 30rpx;
    color: #222;
}