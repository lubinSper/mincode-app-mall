.recharge-banner {
    display: block;
    width: 100%;
    height: 200prpx;
    background-color: #ccc;
}

.recharge-banner image {
    display: block;
    width: 100%;
    height: 200rpx;
}

.recharge-total {
    position: relative;
    width: 100%;
    margin: 20rpx 0;
    border: none;
    background-color: #fff;
    padding-top: 40rpx;
    height: 120rpx;
}

.recharge-total .line {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.recharge-total .line:nth-child(2) {
    padding-bottom: 30rpx;
}

.tip {
    height: 0rpx;
    overflow: hidden;
    text-align: center;
    color: #d3a95a;
    font-size: 30rpx;
    line-height: 68rpx;
    transition: all .2s;
}

.tip.show {
    border-top: solid 2rpx rgba(211,169,90,0.29);
    height: 68rpx;
}

.recharge-total .number {
    position: relative;
    color: #d3a95a;
    font-size: 48rpx;
    line-height: 38rpx;
}

.recharge-total .number text {
    font-weight: 500;
}

.line text {
    width: 30%;
}

.line text:nth-child(1) {
    text-align: center;
}

.line text:nth-child(2) {
    text-align: center;
}

.line text:nth-child(3) {
    text-align: center;
}

.recharge-total .desc {
    color: #888;
    font-size: 26rpx;
    height: 25rpx;
    margin-top: 20rpx;
}

.add-icon,.equal-icon {
    position: absolute;
    color: #888;
    font-size: 48rpx;
    top: 50%;
    transform: translateY(-50%);
    margin-top: 20rpx;
}

.add-icon {
    left: 211rpx;
}

.equal-icon {
    right: 211rpx;
}

.recharge-choose {
    padding: 0 30rpx;
    overflow: hidden;
}

.choose-header {
    color: #888;
    height: 25rpx;
    line-height: 25rpx;
    font-size: 26rpx;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
}

.choose-container {
    display: flex;
    flex-wrap: wrap;
}

.choose-item {
    width: 218rpx;
    height: 140rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-right: 18rpx;
    border: 1rpx solid #cfcfcf;
    box-sizing: border-box;
    background-color: white;
    color: #d3a95a;
    margin-bottom: 18rpx;
    border-radius: 10rpx;
    font-size: 40rpx;
    line-height: 38rpx;
    font-weight: 500;
}

.choose-item .return {
    font-size: 24rpx;
    line-height: 24rpx;
    margin-top: 7rpx;
}

.choose-item:nth-child(3n) {
    margin-right: 0;
}

.choose-item.cur {
    border-color: #d3a95a;
    border-width: 3rpx;
}

.choose-item.other {
    font-size: 26rpx;
    font-weight: normal;
}

.recharge-btn {
    width: 690rpx;
    height: 88rpx;
    background-color: #d3a95a;
    border-radius: 44px;
    line-height: 88rpx;
    color: white;
    text-align: center;
    margin-top: 32rpx;
}