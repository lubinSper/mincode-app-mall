.home-header {
    background-color: white;
    padding: 30rpx;
    height: 360rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #e6e6e6;
}

.home-bg {
    width: 100%;
    height: 300rpx;
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/bgMembershipCentre.png) no-repeat center;
    background-size: 100% 100%;
    color: white;
}

.header-top {
    display: flex;
    justify-content: space-between;
    padding: 40rpx 40rpx 80rpx 40rpx;
}

.t-left {
    display: flex;
    height: 64rpx;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
}

.t-left image {
    width: 64rpx;
    height: 64rpx;
    border-radius: 100%;
    background-color: #e6e6e6;
    margin-right: 10rpx;
}

.t-right image {
    width: 32rpx;
    height: 37rpx;
}

.header-bottom {
    padding: 0 40rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.b-left {
    font-size: 44rpx;
    height: 70rpx;
}

.b-left view:nth-child(1) {
    text-indent: -10rpx;
    height: 33rpx;
    line-height: 33rpx;
    font-weight: 500;
}

.b-left view:nth-child(2) {
    font-size: 28rpx;
    height: 26rpx;
    line-height: 26rpx;
    margin-top: 13rpx;
}

.t-left-userinfo {
    display: flex;
    margin-top: 13rpx;
    font-size: 26rpx;
    height: 22rpx;
    line-height: 22rpx;
    align-items: center;
}

.t-left-nickname {
    height: 25rpx;
    line-height: 25rpx;
}

.id-text {
    font-size: 22rpx;
    transform: scale(0.875);
    transform-origin: 0 11rpx;
    margin-left: 10rpx;
}

.b-right {
    background-color: white;
    border-radius: 35rpx;
    color: #e1b86b;
    font-size: 29rpx;
    width: 146rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    font-weight: 500;
}

.body-header {
    height: 84rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f4f4f4;
    padding: 0 40rpx;
}

.header-recent {
    font-size: 26rpx;
    color: #222;
}

.view-more {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #888;
    height: 100%;
    padding-right: 10rpx;
}

.view-more image {
    width: 12rpx;
    height: 22rpx;
    margin-left: 8rpx;
}