page {
    background-color: #dfb741;
    height: 100%;
    overflow: hidden;
}

.QRCode_man_head {
    width: 100%;
    margin: 0 auto;
    margin-top: 28rpx;
}

.QRCode_man_head .QRCode_man_head_pic {
    width: 100%;
    margin: 0 auto;
}

.QRCode_man_head .QRCode_man_head_pic image {
    width: 208rpx;
    height: 208rpx;
    display: block;
    margin: 0 auto;
    background-color: #eee;
    border-radius: 50%;
}

.QRCode_man_head .QRCode_man_head_text {
    width: 100%;
    height: 56rpx;
    line-height: 56rpx;
    font-size: 28rpx;
    display: inline-block;
    text-align: center;
    color: #fff;
}

.QRCode_payfor_pic {
    width: 690rpx;
    margin: 22rpx auto 0 auto;
    display: block;
    border-radius: 15rpx;
    background-color: #fff;
}

.QRCode_payfor_pic .QRCode_payfor_pic_title {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    display: inline-block;
    background-color: #fafafa;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
}

.QRCode_payfor_pic .QRCode_payfor_pic_title image {
    float: left;
    margin: 32rpx 24rpx auto 42rpx;
    width: 39rpx;
    height: 43rpx;
}

.QRCode_payfor_pic .QRCode_payfor_pic_title span {
    font-size: 30rpx;
    color: #555;
    float: left;
}

.QRCode_payfor_pic .QRCode_payfor_saomao {
    width: 100%;
    margin-top: 74rpx;
    text-align: center;
}

.QRCode_payfor_pic .QRCode_payfor_saomao image {
    width: 404rpx;
    height: 398rpx;
    margin-bottom: 76rpx;
}

.QRCode_notice {
    padding: 50rpx 0 0 0;
    width: 100%;
    line-height: 44rpx;
    font-size: 26rpx;
    text-align: center;
    color: #826307;
}

.QRCode_notice view {
    width: 100%;
    display: inline-block;
}