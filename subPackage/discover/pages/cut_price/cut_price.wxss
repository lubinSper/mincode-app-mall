page {
    background: #FF5708;
    background: -webkit-linear-gradient(right,#ff4c09,#ff6707);
    background: -o-linear-gradient(right,#ff4c09,#ff6707);
    background: -moz-linear-gradient(right,#ff4c09,#ff6707);
    background: linear-gradient(right,#ff4c09,#ff6707);
}

view {
    box-sizing: border-box;
}

.main {
    padding-bottom: 100rpx;
}

.header {
    padding: 0 30rpx 30rpx 30rpx;
    border-top: 1rpx solid #e6e6e6;
    height: 460rpx;
    background: url("http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/bargin-background.png") no-repeat;
    background-size: 100%;
}

.reminder {
    padding: 40rpx 0 30rpx 0;
    width: 100%;
}

.reminder .mian {
    width: 100%;
    height: 112rpx;
    display: flex;
    background-color: #ff7f3a;
    border-radius: 56rpx;
    padding: 22rpx;
    position: relative;
}

.reminder .icon {
    position: absolute;
    left: 70rpx;
    bottom: -4rpx;
    height: 22rpx;
    width: 22rpx;
}

.reminder .icon image {
    height: 100%;
    width: 100%;
}

.reminder .mian .left {
    width: 68rpx;
    height: 68rpx;
}

.reminder .mian .left image {
    width: 100%;
    height: 100%;
    border-radius: 34rpx;
    background-color: #eee;
}

.reminder .mian .right {
    flex: 1;
    padding-left: 22rpx;
    color: #222;
}

.reminder .mian .right .name {
    font-size: 30rpx;
    line-height: 30rpx;
    color: #fff;
}

.reminder .mian .right .text {
    font-size: 28rpx;
    line-height: 28rpx;
    margin-top: 10rpx;
    color: #fff;
}

.header .goods {
    width: 100%;
    display: flex;
    color: #222;
    margin-top: 105rpx;
    height: 260rpx;
    background-color: #ffffff;
    box-shadow: 0rpx 5rpx 9rpx 0rpx rgba(218,85,1,0.2);
    border-radius: 20rpx;
    padding: 26rpx;
}

.header .goods .left {
    height: 204rpx;
    width: 204rpx;
}

.header .goods .left image {
    height: 100%;
    width: 100%;
    background-color: #eee;
}

.header .goods .right {
    flex: 1;
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
}

.header .goods .right .first {
    font-size: 32rpx;
    line-height: 50rpx;
    font-weight: bold;
    color: #222;
    flex: 1;
}

.header .goods .right .second {
    font-size: 28rpx;
    color: #888;
    height: 50rpx;
    line-height: 50rpx;
    flex: 1;
}

.header .goods .right .second .price {
    font-weight: 500;
    padding: 0;
    color: #ff4800;
    font-size: 50rpx;
    margin-left: 50rpx;
}

.header .goods .right .second .old_price {
    font-size: 22rpx;
    text-decoration: line-through;
}

.header .goods .right .third {
    font-size: 24rpx;
    color: #222;
    flex: 1;
}

.header .goods .right .third .price {
    font-weight: 500;
    margin-left: 10rpx;
    font-family: PingFang-SC-Bold;
    color: #ff7800;
}

.content {
    padding: 30rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.limit {
    width: 100%;
    height: 46rpx;
    line-height: 46rpx;
    font-size: 24rpx;
    flex: 1;
}

.limit text {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    background-color: #281c1c;
    color: white;
    border-radius: 6rpx;
    text-align: center;
    font-weight: 500;
}

.limit i {
    color: black;
    padding: 0 8rpx;
}

.content .warn {
    font-size: 24rpx;
    color: #888888;
    height: 28prx;
    line-height: 28rpx;
    margin-bottom: 22rpx;
}

.content .helpers .helpersImg {
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
    margin-right: 18rpx;
}

.content .helpers .helpersImg1 {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    margin-right: 18rpx;
}

.needs {
    font-size: 28rpx;
    height: 70rpx;
    width: 100%;
    line-height: 70rpx;
    margin-bottom: 8rpx;
    color: #ffffff;
    display: flex;
    justify-content: center;
    margin-top: 25rpx;
}

.needs .number {
    color: #ffffff;
    padding: 0 8rpx;
    font-size: 32rpx;
    font-weight: 500;
}

.content .button {
    font-weight: bold;
    width: 100%;
    height: 87rpx;
    line-height: 87rpx;
    background: url("http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/cutBtn.png") no-repeat;
    background-size: cover;
    color: #5a1d09;
    font-size: 30rpx;
    border-radius: 40rpx;
}

.content button::after {
    border: 0;
}

.content .button.end {
    background-color: #cccccc;
    color: fefcfc;
}

.bargin-content {
    width: 100%;
    display: flex;
    justify-content: center;
}

.cutprice {
    padding: 35rpx;
    width: 90%;
    align-items: center;
    background-color: #ff7f3a;
    border-radius: 20rpx;
    margin-bottom: 25rpx;
}

.cutprice .title {
    height: 50rpx;
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    line-height: 50rpx;
}

.cutprice .title .line {
    height: 2rpx;
    width: 468rpx;
    background: #e5e5e5;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -234rpx;
    margin-top: -1rpx;
    z-index: 0;
}

.cutprice .title .text {
    color: #ffffff;
    font-size: 24rpx;
    z-index: 99;
}

.cutprice .item {
    padding: 26rpx 0;
    display: flex;
    border-bottom: 1rpx solid rgba(229,229,229,0.3);
}

.cutprice .item.last {
    border-bottom: none;
}

.cutprice .left {
    height: 50rpx;
    width: 50rpx;
    vertical-align: middle;
}

.cutprice .left image {
    width: 100%;
    height: 100%;
    border-radius: 35rpx;
    background-color: #eee;
}

.cutprice .right {
    padding-left: 26rpx;
    flex: 1;
    vertical-align: middle;
}

.cutprice .right .first {
    display: flex;
    width: 100%;
    line-height: 36rpx;
}

.cutprice .right .first .name {
    flex: 1;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 300rpx;
    color: #ffffff;
}

.cutprice .right .first .price {
    width: 200rpx;
    font-size: 26rpx;
    color: #fcff00;
    text-align: right;
}

.cutprice .right .second {
    font-size: 26rpx;
    color: #ffd4c3;
}

.button_view {
    height: 100rpx;
    width: 100%;
    padding: 10rpx 5rpx;
    display: flex;
    font-size: 30rpx;
    background-color: white;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99;
}

.button_view .detail {
    margin: 0 5rpx;
    flex: 1;
    border: 2rpx solid #ff7800;
    font-size: 28rpx;
    color: #ff7800;
    text-align: center;
    border-radius: 40rpx;
    height: 100%;
    line-height: 80rpx;
}

.button_view .pay {
    margin: 0 5rpx;
    flex: 1;
    font-size: 28rpx;
    color: white;
    background-color: #ff7800;
    text-align: center;
    border-radius: 40rpx;
    line-height: 80rpx;
}

.button_view .pay.end {
    background-color: #cccccc;
    color: fefcfc;
}

.cut_price_box {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1001;
}

.cut_price_box .main {
    width: 560rpx;
}

.cut_price_box .content {
    width: 100%;
    height: 420rpx;
    border-radius: 25rpx;
    background-color: white;
    text-align: center;
    padding: 30rpx 0;
}

.cut_price_box .content .icon {
    padding: 16prx 0;
}

.cut_price_box .content .icon image {
    height: 80rpx;
    width: 80rpx;
    border-radius: 40rpx;
}

.cut_price_box .content .icon.helper image {
    width: 110rpx;
    height: 98rpx;
    border-radius: 0;
}

.cut_price_box .content .success {
    font-size: 36rpx;
    font-weight: 800;
    height: 70rpx;
    line-height: 70rpx;
}

.cut_price_box .content .price_view {
    height: 100rpx;
    line-height: 100rpx;
    color: #222;
    font-size: 26rpx;
}

.cut_price_box .content .price_view .price {
    font-size: 40rpx;
    color: #ff7800;
}

.cut_price_box .content .box_button {
    font-size: 30rpx;
    width: 460rpx;
    margin: 0 auto;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    background-color: #ff7800;
    color: white;
    margin-top: 10rpx;
}

.cut_price_box .close {
    margin-top: 100rpx;
    text-align: center;
}

.cut_price_box .close image {
    height: 62rpx;
    width: 62rpx;
}

.cut_price_box .success_content {
    height: 600rpx;
    width: 100%;
    background-image: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/shop-multi/cut_success_bg.png);
    background-size: 100% 100%;
    padding-top: 120rpx;
    text-align: center;
    font-size: 30rpx;
}

.cut_price_box .success_content .first {
    height: 242rpx;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.cut_price_box .success_content .first .cut_price {
    font-size: 46rpx;
    line-height: 46rpx;
}

.cut_price_box .success_content .second {
    color: #888;
    height: 56rpx;
    line-height: 56rpx;
}

.cut_price_box .success_content .second .price {
    color: #ff7800;
    padding-left: 20rpx;
}

.cut_price_box .success_content .third {
    color: #888;
    height: 46rpx;
    line-height: 46rpx;
    margin-bottom: 30rpx;
}

.cut_price_box .success_content .button {
    background-color: #ff7800;
    color: white;
    width: 460rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin: auto;
    border-radius: 40rpx;
    font-size: 28rpx;
}

.cut_screen {
    opacity: 0.7;
}

.helpers-view {
    display: flex;
    overflow-y: hidden;
    flex-direction: column;
}

.control-image-content {
    display: flex;
    flex-direction: row;
    align-self: center;
}

.control-image-txt {
    margin-top: 30rpx;
    font-size: 28rpx;
    color: #ff7800;
}

.control-image-content image {
    width: 19rpx;
    height: 10rpx;
    align-self: center;
    margin-left: 12rpx;
    margin-top: 30rpx;
}

.cut_info {
    display: flex;
    flex-direction: row;
}

.text_nickname {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 200rpx;
}

.button_view .form {
    flex: 1;
}

.reminder-bg {
    background-color: #ff7f3a;
}

.bargin-line {
    height: 1rpx;
    width: 80rpx;
    background: #fff;
    align-self: center;
}