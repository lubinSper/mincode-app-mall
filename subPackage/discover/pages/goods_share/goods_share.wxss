.goods_share {
    border-top: 1rpx solid #e6e6e6;
}

.share-content {
    background: #fff;
    padding: 50rpx 30rpx;
    padding-bottom: 40rpx;
}

.share-content .goods-info {
    display: flex;
    flex-direction: row;
}

.share-content .goods-info image {
    height: 247rpx;
    width: 247rpx;
}

.share-content .goods-info .goods-content {
    margin-left: 18rpx;
    flex: 1;
    position: relative;
}

.share-content .goods-info .title {
    font-size: 32rpx;
    margin-top: 10rpx;
    line-height: 50rpx;
    height: 100rpx;
    overflow: hidden;
    text-indent: 0em;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.share-content .goods-info .details {
    display: flex;
    width: 100%;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
}

.share-content .goods-info .details .left {
    background: linear-gradient(to right,#ff3988,#b423d4);
    color: #fff;
    padding: 15rpx 0rpx 15rpx 20rpx;
    font-size: 24rpx;
    flex-grow: 1;
}

.share-content .goods-info .details .left .bigview {
    line-height: 24rpx;
    margin-bottom: 10rpx;
}

.share-content .goods-info .details .left .big {
    font-size: 40rpx;
    line-height: 30rpx;
    font-weight: bold;
}

.share-content .goods-info .details .left .cost {
    display: flex;
    align-items: flex-start;
}

.share-content .goods-info .details .left .cost-money {
    text-decoration: line-through;
    line-height: 30rpx;
}

.share-content .goods-info .details .left .border {
    border: 2rpx solid #fff;
    border-radius: 20rpx;
    font-size: 20rpx;
    line-height: 20rpx;
    display: inline-block;
    padding: 3.5rpx 10rpx;
    margin-right: 10rpx;
    white-space: nowrap;
    min-width: 52rpx;
    text-align: center;
}

.share-content .goods-info .details .right {
    background: #eee;
    text-align: center;
    padding: 0 10rpx;
}

.share-content .goods-info .details .right .end {
    font-size: 24rpx;
    line-height: 24rpx;
    margin-top: 14rpx;
    margin-bottom: 5rpx;
}

.share-content .goods-info .details .right .number {
    display: inline-block;
    background: #b423d4;
    color: #fff;
    font-size: 28rpx;
    padding: 0 5rpx;
    border-radius: 6rpx;
}

.share-content .goods-info .details .right .colon {
    margin: 0 5rpx;
}

.share-content .goods-info .timelimit .left {
    background: linear-gradient(to right,#ff3988,#b423d4);
}

.share-content .goods-info .timelimit .right {
    background: #fae5ff;
    color: #b423d4;
}

.share-content .goods-info .cut .left {
    background: linear-gradient(to right,#fd6a31,#ff2c30);
}

.share-content .goods-info .cut .right {
    background: #ffe4e2;
    color: #ff210f;
}

.share-content .goods-info .cut .right .number {
    background: #ff210f;
}

.share-content .goods-info .group .left {
    background: linear-gradient(to right,#ff3e9d,#f6304b);
}

.share-content .goods-info .yuyue {
    color: #ff7800;
    font-size: 28rpx;
}

.share-content .goods-info .yuyue .yy {
    color: #222;
}

.share-content .goods-info .yuyue .big {
    font-size: 40rpx;
}

.share-content .goods-info .yuyue .cost-money {
    color: #888;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.share-content .propaganda {
    margin-top: 50rpx;
    font-size: 30rpx;
    position: relative;
    display: inline-block;
}

.share-content .propaganda text {
    padding: 0 60rpx;
    padding-left: 60rpx;
    text-align: center;
    display: block;
}

.share-content .propaganda image {
    width: 34rpx;
    height: 22rpx;
    position: absolute;
}

.share-content .propaganda .left-image {
    top: 10rpx;
    left: 0;
}

.share-content .propaganda .right-image {
    bottom: 16rpx;
    right: 0;
}

.share-content .button {
    padding: 0 40rpx;
    margin-top: 50rpx;
    text-align: center;
}

.share-content .button button {
    background: #ff7800;
    color: #fff;
    border-radius: 50rpx;
    font-size: 32rpx;
    width: 580rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0;
    display: inline-block;
}

button::after {
    border: none;
}

.goods_share .list {
    border-bottom: 1rpx solid #e2e2e2;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 30rpx;
}

.share-gold {
    background: #fff;
    padding: 0 30rpx;
    margin-top: 20rpx;
}

.share-gold .list:last-child {
    border: none;
    position: relative;
}

.share-gold .getgold {
    display: flex;
    justify-content: space-between;
}

.share-gold .getgold .gold {
    color: #ff7800;
}

.share-gold .list .arrow {
    width: 14rpx;
    height: 25rpx;
    position: absolute;
    right: 5rpx;
    top: 34rpx;
}

.share-gold .list .arrow image {
    width: 14rpx;
    height: 25rpx;
    float: left;
}

.title-h3 {
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 30rpx 0 20rpx 30rpx;
    color: #888;
}

.custom-content {
    background: #fff;
    padding: 0 30rpx;
}

.custom-content .lable {
    color: #555;
    display: inline-block;
    width: 165rpx;
    margin-right: 20rpx;
    height: 90rpx;
    white-space: nowrap;
}

.custom-content .auto {
    width: auto;
}

.custom-content .list:last-child {
    border: none;
    position: relative;
}

.custom-content .list {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.custom-content .list input {
    flex-grow: 1;
    line-height: 90rpx;
    height: 90rpx;
}

.custom-content .list .icon {
    display: inline-block;
    width: 100rpx;
    height: 50rpx;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.custom-content .list .nouse {
    background-image: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/switch-guan.png);
}

.custom-content .list .use {
    background-image: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/switch-kai.png);
}

.bottom {
    background: #fff;
    border-top: 2rpx solid #e6e6e6;
    position: fixed;
    bottom: 0;
    display: flex;
    justify-content: space-around;
    z-index: 2;
    width: 100%;
}

.bottom button {
    border: 1rpx solid #ff7800;
    border-radius: 60rpx;
    width: 330rpx;
    font-size: 30rpx;
}

.bottom .poster {
    background: #fff;
    color: #ff7800;
}

.bottom .share {
    background: #ff7800;
    color: #fff;
}

.poster-content {
    text-align: center;
    margin: 0 10rpx;
    margin-top: 10rpx;
}

.poster-content image {
    box-shadow: 0 0 20rpx #ddd;
    width: 550rpx;
    height: 850rpx;
    vertical-align: top;
}

.poster-content .savebutton {
    width: 500rpx;
    height: 70rpx;
    background: #ff7800;
    border-radius: 35rpx;
    color: #fff;
    line-height: 70rpx;
    font-size: 32rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}

.poster-content .savebutton::after {
    border: none;
}

.poster-content .subtitle {
    line-height: 26rpx;
    font-size: 26rpx;
    margin-bottom: 10rpx;
    color: #999;
}

.layer_bg {
    position: fixed;
    z-index: 9;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
}

.layer-content {
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.layer-content .layer-banner {
    background: #fff;
    min-width: 450rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    overflow: hidden;
}

.layer_title {
    padding: 20rpx 0;
    padding-left: 20rpx;
    border-bottom: 2rpx solid #e2e2e2;
}

.layer-content .content {
    text-align: center;
    padding: 40rpx 0;
    border-bottom: 2rpx solid #e2e2e2;
}

.operation {
    display: flex;
    justify-content: space-between;
}

.operation button {
    width: 50%;
    margin: 0;
    background: #fff;
    border-radius: 0;
    font-size: 28rpx;
}

.operation button::after {
    border: none;
}

.operation .confirm {
    border-left: 2rpx solid #e2e2e2;
}

.layer-close {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/guanbi.png) no-repeat left center / 60rpx 60rpx;
    width: 60rpx;
    height: 60rpx;
}