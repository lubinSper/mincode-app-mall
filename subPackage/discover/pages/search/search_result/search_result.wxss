.loading_failure {
    position: relative;
    width: 100%;
    height: 600rpx;
}

.loading_failure .loading_wrap {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    height: 176rpx;
}

.loading_failure .loading_failure_img {
    text-align: center;
}

.loading_failure image {
    width: 100rpx;
    height: 118rpx;
}

.loading_failure .loading_failure_text {
    text-align: center;
    font-size: 25rpx;
    color: #bababa;
}

.loading_failure .loading_failure_text text {
    font-weight: bold;
    color: #888;
}

.search_result {
    padding-bottom: 20rpx;
    background-color: #f4f4f4;
    overflow: hidden;
}

.nav {
    position: fixed;
    top: 0;
    z-index: 999;
    width: 100%;
    height: 80rpx;
    padding-top: 10rpx;
    background-color: #fff;
}

.search {
    float: left;
    margin-left: 28rpx;
    position: relative;
    height: 64rpx;
    width: 610rpx;
    line-height: 64rpx;
    border-radius: 64rpx;
    background: #f4f4f4 url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/find_icon.png) no-repeat 20rpx center / 28rpx 28rpx;
}

.search input {
    font-size: 26rpx;
    margin-left: 60rpx;
    line-height: 64rpx;
    height: 64rpx;
    width: 530rpx;
}

.del-search {
    position: absolute;
    right: 0;
    top: 50%;
    width: 50rpx;
    height: 50rpx;
    margin-top: -25rpx;
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/search_close.png) no-repeat center center / 30rpx 30rpx;
}

.cancel_search {
    float: left;
    font-size: 30rpx;
    color: #aaa;
    text-align: center;
    width: 80rpx;
    height: 64rpx;
    line-height: 64rpx;
    margin-left: 15rpx;
}

.scroll_content {
    padding-top: 92rpx;
}

.loading {
    height: auto;
    line-height: normal;
    padding-bottom: 20rpx;
}

.loading image {
    margin-top: -24rpx;
}

.loading_test {
    border: 1px solid blue;
}

.no_data {
    padding-top: 200rpx;
    font-size: 30rpx;
    color: #555;
}