.cancle-outter-view {
    display: flex;
    flex-direction: column;
    align-content: center;
    position: relative;
}

.cancle-top-tip {
    color: #888888;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding-left: 30rpx;
    background-color: #f4f4f4;
}

.cancle-item-class {
    height: 91rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.cancle-title {
    font-size: 30rpx;
    color: #222222;
    margin-left: 30rpx;
}

.cancle-item-hover {
    background-color: #e6e6e6;
}

.cancle-item-view {
    display: flex;
    height: 90rpx;
    width: 100%;
    justify-content: center;
    flex-direction: row;
    align-items: center;
}

.cancle-bottom-line {
    height: 1rpx;
    background-color: #e2e2e2;
    width: 720rpx;
    margin-left: 30rpx;
}

.cancle-click-img {
    width: 26rpx;
    height: 19rpx;
    margin-right: 45rpx;
    align-items: flex-end;
}

.placehoder-view {
    display: flex;
    flex: 1;
}

.cancle-placehoder {
    font-size: 28rpx;
    color: #aaaaaa;
}

.cancle-textarea {
    font-size: 30rpx;
    color: #222222;
    margin-top: 26rpx;
    padding: 27rpx 30rpx;
    width: 100%;
    box-sizing: border-box;
    height: 200rpx;
    background-color: #ffffff;
}

.bottom-button {
    width: 100%;
    height: 120rpx;
    background-color: #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    left: 0;
    bottom: 0;
}

.submit-button {
    width: 710rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #ff7800;
    color: #ffffff;
    border-radius: 10rpx;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
}

.submit-hover-class {
    background-color: #e16c04;
}