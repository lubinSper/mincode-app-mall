view {
    margin: 0 auto;
    padding: 0 auto;
}

.clear {
    clear: both;
}

.plColor {
    color: #aaa;
    font-size: 30rpx;
}

.product_infor {
    width: 100%;
    margin: 0 auto;
    background-color: #fff;
    border-top: 1rpx solid #e2e2e2;
}

.product_infor dl {
    width: 100%;
    margin: 0 auto;
    display: flex;
    border-bottom: 1rpx solid #e2e2e2;
    padding: 30rpx 0;
}

.product_infor dl dt {
    float: left;
    flex: 1;
    margin-left: 30rpx;
    max-width: 160rpx;
}

.product_infor dl dt image {
    width: 130rpx;
    height: 130rpx;
    display: block;
}

.product_infor dl dd {
    flex: 3;
    height: 130rpx;
    display: inline-block;
    margin-right: 30rpx;
    position: relative;
}

.product_infor dl dd .product_title {
    margin-top: -8rpx;
    line-height: 40rpx;
    height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.product_infor dl dd .product_price {
    position: absolute;
    left: 0;
    bottom: -10rpx;
}

.product_infor dl dd .product_price abcd {
    position: relative;
    float: left;
    color: #ff7800;
    font-size: 30rpx;
}

.product_infor dl dd .product_price text {
    float: left;
    color: #555;
    font-size: 24rpx;
    text-decoration: line-through;
    margin: 8rpx 0 0 10rpx;
}

.leaving_message {
    padding-bottom: 20rpx;
    padding-top: 10rpx;
}

.leaving_message input {
    margin: 0 30rpx;
    width: 690rpx;
    line-height: 40rpx;
    height: 40rpx;
    color: #555;
}

.payment {
    width: 100%;
    margin: 0 auto;
    margin-top: 20rpx;
    background-color: #fff;
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
}

.payment text {
    float: left;
    margin-left: 30rpx;
}

.payment .payment_right {
    float: right;
    width: 528rpx;
    display: block;
    height: 90rpx;
    line-height: 90rpx;
}

.payment .payment_right image {
    float: right;
}

.payment_mode_title text {
    float: right;
    background-image: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/one-shop-one-mini-app/weixin_next.jpg);
    background-repeat: no-repeat;
    background-size: 12rpx 22rpx;
    background-position: right center;
    margin-right: 30rpx;
    padding-right: 34rpx;
}

.payment .payment_right text {
    float: right;
    font-size: 30rpx;
    background-image: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/one-shop-one-mini-app/weixin_next.jpg);
    background-repeat: no-repeat;
    background-size: 12rpx 22rpx;
    background-position: right center;
    margin-right: 30rpx;
    padding-right: 34rpx;
}

.payment_mode {
    width: 528rpx;
    display: block;
    height: 90rpx;
    line-height: 90rpx;
    position: relative;
}

.payment_mode .payment_mode_li {
    position: absolute;
    right: 0;
    top: 0;
}

.payment_mode_li text {
    margin-left: 10rpx;
}

.payment_mode_li image {
    width: 44rpx;
    height: 40rpx;
    margin: 26rpx 0 0 0;
}

.card_icon image {
    width: 42rpx;
    height: 30rpx;
    margin: 33rpx 0 0 0;
}

.subscribe {
    width: 100%;
    margin: 0 auto;
    margin-top: 20rpx;
    max-height: 386rpx;
}

.linkus {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    width: 100%;
    border-top: 1rpx solid #e6e6e6;
}

.linkus .linkus_le {
    flex: 1;
    background-color: #fff;
}

.linkus .linkus_le .contactus {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/wds-xcx/weixin.png) center 22rpx / 44rpx no-repeat;
    padding: 0;
    margin: 0;
    border: 0;
    border-radius: 0;
    padding-top: 64rpx;
    height: 100%;
    line-height: normal;
    text-align: center;
    font-size: 22rpx;
    color: #555;
}

.linkus .linkus_ri {
    flex: 3;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-weight: bold;
    font-size: 36rpx;
    color: #fff;
    background-color: #ff7800;
}

.linkus .linkus_ri_gray {
    flex: 3;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-weight: bold;
    font-size: 36rpx;
    color: #fff;
    background-color: #ddd;
}

.dmc_content_infor {
    background-color: #fff;
}

.dmc_content_infor ul li {
    width: 100%;
    display: table;
    height: 80rpx;
    line-height: 90rpx;
    border-top: 1rpx solid #e2e2e2;
}

.dmc_content_infor ul li:first-child {
    border-top: 1rpx solid #fff;
}

.dmc_content_infor ul li text {
    float: left;
    margin-left: 30rpx;
    width: 192rpx;
    height: 90rpx;
}

.dmc_content_infor ul li input {
    float: left;
    width: 500rpx;
    height: 90rpx;
    line-height: 100rpx;
    color: #555;
}

.dmc_content_infor ul li abcd {
    height: 90rpx;
    width: 440rpx;
    display: block;
    float: right;
    text-align: right;
    padding-right: 20rpx;
    color: #888;
}

.dmc_content_infor ul li span {
    float: right;
    width: 12rpx;
    height: 22rpx;
    display: block;
    background-image: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/one-shop-one-mini-app/weixin_next.jpg);
    background-repeat: no-repeat;
    background-size: 12rpx 22rpx;
    background-position: right 0rpx;
    margin: 34rpx 30rpx 0 0;
}

.dmc_money {
    background-color: #fff;
    margin-top: 20rpx;
    height: 90rpx;
    line-height: 90rpx;
}

.dmc_money .dmc_money_ul {
    margin: 0 30rpx;
    width: 690rpx;
}

.dmc_money .dmc_money_ul .dmc_money_li {
    display: inline-block;
    width: 690rpx;
}

.dmc_money .dmc_money_ul .dmc_money_li abcd {
    float: left;
}

.dmc_money .gai_payfor {
    height: 60rpx;
    line-height: 89rpx;
    display: inline-block;
}

.dmc_money .sure_money {
    float: right;
    color: #ff7800;
}

.pay-way-modal {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0,0,0,0.3);
    transition: opacity .3s;
    opacity: 0;
    z-index: 9998;
}

.pay-way-dialog {
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #f4f4f4;
    width: 100%;
    transform: translateY(10000px);
    z-index: 9999;
}

.way-item,.cancel-dialog {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    border-bottom: 1rpx solid #e2e2e2;
    font-size: 32rpx;
    background-color: white;
    padding: 30rpx 0;
    box-sizing: border-box;
}

.item-icon {
    max-width: 44rpx;
    max-height: 40rpx;
    margin-right: 10rpx;
}

.item-icon-card {
    width: 42rpx;
    height: 30rpx;
}

.item-box {
    display: flex;
    justify-content: center;
    align-items: center;
}

.balance {
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: #888;
}

.way-item:last-child {
    border-bottom: none;
}

.cancel-dialog {
    margin-top: 20rpx;
}

.s-vip-icon {
    width: 50rpx;
    height: 26rpx;
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/SVIP.png) center center no-repeat;
    background-size: 100% 100%;
    margin-left: 10rpx;
    position: absolute;
    right: -60rpx;
    top: 50%;
    transform: translateY(-50%);
}